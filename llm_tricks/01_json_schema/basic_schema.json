{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "description": "A schema representing a person with basic information",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The person's full name",
      "minLength": 2
    },
    "age": {
      "type": "integer",
      "description": "The person's age in years",
      "minimum": 0,
      "maximum": 120
    },
    "email": {
      "type": "string",
      "description": "The person's email address",
      "format": "email"
    },
    "interests": {
      "type": "array",
      "description": "The person's hobbies or interests",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "required": ["name", "age"],
  "additionalProperties": false
} 